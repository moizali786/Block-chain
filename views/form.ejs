                  <br><br>
                  <label>Email</label>
                  <input type="email" id = "email" name="email"  required>
                  <br><br>
                  <label>Phone No</label>
                  <input type="tel" id = "ph_no" name="ph_no" required 
                  placeholder="0300-4567856" pattern="[0-9]{4}-[0-9]{7}">
                  <br><br>
                  <div class="<%= type %>">
                    <label>Organization/Departement</label>
                    <input type ="text" id = 'empID' name="org" pattern="[A-Za-z\s]+$"  <%= required %>>
                    <br><br>
                    <label>Designation</label>
                    <input type ="text" id = 'empID' name="desg" pattern="[A-Za-z\s]+$"   <%= required %>>
                    <br><br>
                    <label>Employee ID No</label>
                    <input type ="text" id = 'empID' name="id"   <%= required %>>
                    <br><br>
                </div>
              <div class="<%= type1 %>">
                <label>Number of Properties You Want To Register</label>
           <input type="number" id = "prop_amount" name="prop_amount"   min="1" max="50"  <%= required1 %>>
           <br><br>
            </div>
                  <button type ="submit">Submit</button>
