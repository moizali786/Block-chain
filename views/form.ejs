    <main>
      
        <div class="jumbotron">
            <form action= "<%= action %>"  method="POST">
                <fieldset>
                  <h3><%= heading %></h3>
                  <br>
                  <label>Name</label>
                  <input type="text" id = "name" name="name"  pattern="[A-Za-z\s]+$"   required>
